{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-eslint-rules",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "linterOptions": {
    "exclude": [
      "**/node_modules/**/*.ts",
      "**/node_modules/**/*.js",
      "**/dist/**/*.js",
      "**/coverage/**/*.js",
      "**/webpack.*.js",
      "**/jest.config.js",
      "**/storybook-static/**/*.js"
    ]
  },
  "rules": {
    "ordered-imports": [false],
    "react-hooks-nesting": "error",
    "jsx-boolean-value": ["never"]
  }
}
